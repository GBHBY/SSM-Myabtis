<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <!--    配置环境，mybatis的主配置文件-->
    <!--    default的属性叫什么名字都可以，但是environment中的ID和default必须一样-->
    <environments default="mysql ">
        <environment id="mysql">
            <!--            transactionManager是用来配置事务的类型-->
            <transactionManager type="JDBC"></transactionManager>
            <!--            配置数据源，type有三个值：UNPOOLDE,POOLDE,JNDI，常用的就是POOLDE，对于这个，-->
            <dataSource type="POOLDE">
                <!--                基本信息-->
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/fdfd"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>
<!--    指定映射配置文件的位置，映射配置文件指的是每个DAO独立的配置文件,**注意不是全限定类名**-->
    <mappers>
        <mapper resource="mybatisStudy/DAO/UserDaoMapper.xml"/>
    </mappers>
</configuration>